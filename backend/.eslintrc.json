{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-undef": "error",
    "no-extra-semi": "warn",
    "semi": ["warn", "always"],
    "quotes": ["warn", "double"],
    "indent": ["warn", 2],
    "no-console": "off"
  }
}
